<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical"
    tools:context=".Main.activity.DetailActivity">

    <ImageView
        android:id="@+id/imgFlag"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@color/colorAccent" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:fontFamily="@font/bungee"
        tools:text="Afghanistan" />

    <TextView
        android:id="@+id/txtSubregion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="15sp"
        app:fontFamily="@font/bungee"
        tools:text="Southern Asia" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Name:"
        android:textSize="16sp"
        app:fontFamily="@font/arbutus" />

    <TextView
        android:id="@+id/txtNativeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="افغانستان" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Region:"
        android:textSize="16sp"
        app:fontFamily="@font/arbutus" />

    <TextView
        android:id="@+id/txtRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="@font/arbutus"
        tools:text="Asia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency:"
        android:textSize="16sp"
        app:fontFamily="@font/arbutus" />

    <TextView
        android:id="@+id/txtCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:fontFamily="@font/bungee"
        tools:text="Afghan afghani / ؋" />
</LinearLayout>